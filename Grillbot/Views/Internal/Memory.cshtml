@model Grillbot.Models.Internal.MemoryStatusViewModel;

@{
    ViewData["Title"] = "Správa paměti";
}

<div class="mt-2 mr-3 ml-3">
    <div class="d-flex justify-content-center">
        <div class="card" style="width: 1000px">
            <div class="card-body">
                <div class="row">
                    <div class="col">
                        <b>Celkem alokováno paměti:</b><br />
                        @Model.TotalAllocatedBytes.FormatAsSize()
                    </div>

                    <div class="col">
                        <b>Ve spravované paměti:</b><br />
                        @Model.TotalManagedMemory.FormatAsSize()
                    </div>

                    <div class="col">
                        <b>Fragmentace:</b><br />
                        @Model.MemoryInfo.FragmentedBytes.FormatAsSize()
                    </div>

                    <div class="col">
                        <b>Na haldě:</b><br />
                        @Model.MemoryInfo.HeapSizeBytes.FormatAsSize()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
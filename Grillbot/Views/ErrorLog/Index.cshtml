@model Grillbot.Models.ErrorLog.ErrorLogViewModel;

<div class="mt-3 mr-3 ml-3">
    <div class="d-flex justify-content-center">
        <form method="get" class="card" style="width: 500px">
            <div class="card-body">
                <div class="form-row">
                    <div class="col-md-12 mb-3">
                        <label for="ID">ID záznamu</label>
                        <input type="number" asp-for="ID" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="form-row">
                    <div class="col-md-12 d-flex justify-content-end align-items-end">
                        <button type="submit" class="btn btn-primary">Potvrdit</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    @if (Model.Found == true)
    {
        <div class="card mt-3 alert alert-secondary">
            <div class="card-body pl-0 pr-0 pt-2 pb-2">
                <h5 class="card-title">@Model.LogItem.CreatedAt.ToLocaleDatetime()</h5>

                <pre>@Model.LogItem.Data</pre>
            </div>
        </div>
    }
    else if (Model.Found == false)
    {
        <div class="alert alert-danger mt-3" role="alert">
            Požadovaný záznam nebyl nalezen.
        </div>
    }
</div>